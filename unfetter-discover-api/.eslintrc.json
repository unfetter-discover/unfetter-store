{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "rules": {
    // ignore the dangle rule, mongo used _id
    "no-underscore-dangle": 0,
    "comma-dangle": 0,
    "no-console": 0,
    "consistent-return": 0,
    "max-len": 0,
    "no-restricted-syntax": 0,
    "no-var": 0,
    "indent": [
      "warn",
      4
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "prefer-destructuring": [
      "error", {
        "array": true,
        "object": false
      }
    ],
    "no-shadow": ["warn", { "builtinGlobals": false, "hoist": "functions", "allow": [] }],
    "no-void": 0,
    "import/no-unresolved": "off",
    "global-require":"off"
  },
  "env": {
    "jasmine": true
  },
  "settings": {
    "import/resolver": "webpack"
  }
}